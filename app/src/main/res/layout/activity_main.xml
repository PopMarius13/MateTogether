<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dundal"
    tools:context=".MainActivity"
    android:layout_gravity="center"
    tools:layout_editor_absoluteY="81dp"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">



        <Button
            android:id="@+id/Teorie"
            android:layout_width="260dp"
            android:layout_height="80dp"
            android:background="@drawable/rotunjire_button"
            android:fontFamily="serif"
            android:text="Teorie"
            android:textColor="@color/colorFundal"
            android:textSize="50sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/Probleme"
            android:layout_width="200dp"
            android:layout_height="85dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/rotunjire_button"
            android:fontFamily="serif"
            android:text="teste"
            android:textColor="@color/colorFundal"
            android:textSize="50sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/Ajutor"
            android:layout_width="300dp"
            android:layout_height="85dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/rotunjire_button"
            android:fontFamily="serif"
            android:text="@string/ajutor"
            android:textColor="@color/colorFundal"
            android:textSize="50sp" />

    </LinearLayout>

    <Button
        android:id="@+id/facebook"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/facebook"
        />

    <Button
        android:id="@+id/Timpliber"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="40dp"
        android:text="@string/timp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:background="@drawable/buttonsugesti"
        android:textSize="15sp"
        android:textColor="@color/button"
        />
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-9513540471540461/2927404022">
    </com.google.android.gms.ads.AdView>


</RelativeLayout>